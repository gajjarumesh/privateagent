# ARIA Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=ARIA
APP_VERSION=1.0.0
DEBUG=false

# Secret key for session management (generate a secure random key for production)
SECRET_KEY=change-me-in-production-use-a-secure-key

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://aria:aria_password@localhost:5432/aria_db

# For Docker Compose, use:
# DATABASE_URL=postgresql://aria:aria_password@postgres:5432/aria_db

# =============================================================================
# Ollama LLM Configuration
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434

# For Docker Compose, use:
# OLLAMA_BASE_URL=http://ollama:11434

# Default model (Mistral 7B quantized for efficiency)
OLLAMA_MODEL=mistral:7b-instruct-q4_K_M

# Code generation model
OLLAMA_CODE_MODEL=codellama:7b-instruct-q4_K_M

# Request timeout in seconds
OLLAMA_TIMEOUT=120

# =============================================================================
# Security Settings
# =============================================================================
# Encryption key for sensitive data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Memory Settings
# =============================================================================
# Maximum conversation history to maintain
MAX_CONVERSATION_HISTORY=20

# Maximum context tokens for LLM
MAX_CONTEXT_TOKENS=4096

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# External Services (Non-AI)
# =============================================================================
# Enable Yahoo Finance for market data
YAHOO_FINANCE_ENABLED=true

# =============================================================================
# Frontend Settings (used during build)
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
